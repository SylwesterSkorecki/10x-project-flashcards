---
import Layout from "@/layouts/Layout.astro";
import { ResetPasswordForm } from "@/components/auth/ResetPasswordForm";

// Check if user has a valid recovery session
// After clicking the reset link from email, Supabase automatically sets a recovery session
const supabase = Astro.locals.supabase;
const {
  data: { user },
  error,
} = await supabase.auth.getUser();

// If no valid session (token invalid/expired), redirect to forgot-password
if (error || !user) {
  return Astro.redirect("/auth/forgot-password?error=invalid_token");
}

// Optional: Check if this is a recovery session specifically
// (not a regular authenticated session)
// Note: In Supabase, the recovery flow automatically allows password updates
